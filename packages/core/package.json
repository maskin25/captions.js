{
  "name": "captions.js",
  "version": "0.1.1-alpha",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maskin25/captions.js"
  },
  "description": "Render styled animated captions on canvas â€” works both on client and server side using Node.js and FFmpeg.",
  "keywords": [
    "captions",
    "subtitles",
    "video",
    "transcription",
    "ffmpeg",
    "client-side",
    "server-side"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "prepublishOnly": "cp ../../README.md ./README.md && pnpm run build",
    "postpublish": "rm -f README.md"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "konva": "^10.0.2"
  }
}
