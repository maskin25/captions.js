{
  "name": "@captionsjs/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "docker:build": "docker build -t captionsjs-server .",
    "docker:run": "docker run --rm -p 4000:4000 captionsjs-server"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "captions.js": "workspace:*",
    "express": "^4.19.2",
    "fluent-ffmpeg": "^2.1.3",
    "konva": "^10.0.8",
    "pino": "^8.17.1",
    "skia-canvas": "^3.0.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^20.11.19",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
